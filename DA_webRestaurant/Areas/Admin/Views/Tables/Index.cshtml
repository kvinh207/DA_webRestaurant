@model IEnumerable<Entity.Table>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Shared/_LayoutPage1Admin.cshtml";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<form asp-action="Search" method="get">
	<div class="form-group">
		<label for="tableType">Table Type:</label>
		<select id="tableType" name="tableType" class="form-control">
			<option value="">--Select--</option>
			@foreach (var value in Enum.GetValues(typeof(TableType)))
			{
				<option value="@value">@value</option>
			}
		</select>
	</div>
	<div class="form-group">
		<label for="tableStatus">Table Status:</label>
		<select id="tableStatus" name="tableStatus" class="form-control">
			<option value="">--Select--</option>
			@foreach (var value in Enum.GetValues(typeof(TableStatus)))
			{
				<option value="@value">@value</option>
			}
		</select>
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-primary">Search</button>
	</div>
</form>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Type)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.NumberOfSeats)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.IsReserved)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Status)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Type)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.NumberOfSeats)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IsReserved)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Status)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.TableId">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.TableId">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.TableId">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
