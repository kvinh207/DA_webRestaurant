@model OrderViewModel;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Shared/_LayoutPage1Admin.cshtml";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Order.OrderDate" class="control-label"></label>
                <input asp-for="Order.OrderDate" class="form-control" />
                <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Select menu items:</label>
                <select id="menuItem1" class="form-control" asp-items="@Model.MenuItemOptions">
                    <option value="">-- Select --</option>
                </select>
            </div>
            <div class="form-group">
                <select id="menuItem2" class="form-control" asp-items="@Model.MenuItemOptions">
                    <option value="">-- Select --</option>
                </select>
            </div>
            <div class="form-group">
                <select id="menuItem3" class="form-control" asp-items="@Model.MenuItemOptions">
                    <option value="">-- Select --</option>
                </select>
            </div>
            <button type="button" onclick="registerSelected()">Register Selected</button>
            <span asp-validation-for="SelectedMenuItemId" class="text-danger"></span>

            <!-- Hidden input to store the registered items -->
            <input type="hidden" id="registeredItems" name="registeredItems" />


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    function registerSelected() {
        var selectedItems = [];
        selectedItems.push(document.getElementById("menuItem1").value);
        selectedItems.push(document.getElementById("menuItem2").value);
        selectedItems.push(document.getElementById("menuItem3").value);

        document.getElementById("registeredItems").value = JSON.stringify(selectedItems);
    }
</script>
