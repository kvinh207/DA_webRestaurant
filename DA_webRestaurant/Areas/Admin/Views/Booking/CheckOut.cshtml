@model DA_webRestaurant.Models.Booking

<h1>Check Out</h1>

<p>Are you sure you want to check out this booking?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Table ID:</dt>
        <dd class="col-sm-10">@Model.TableId</dd>
        <dt class="col-sm-2">Customer Name:</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>
        <dt class="col-sm-2">Phone Number:</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>
        <dt class="col-sm-2">Booking Time:</dt>
        <dd class="col-sm-10">@Model.BookingTime</dd>
        <dt class="col-sm-2">Number of Guests:</dt>
        <dd class="col-sm-10">@Model.NumberOfGuests</dd>
    </dl>

    <form asp-action="CheckOut" asp-route-id="@Model.BookingId" method="post">
        <button type="submit" class="btn btn-danger">Check Out</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
